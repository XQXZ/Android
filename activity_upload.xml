<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg6"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:id="@+id/studentSport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:gravity="center_horizontal"
        android:text="学 生 运 动 轨 迹 上 传"
        android:textColor="#000"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_below="@id/studentSport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="姓名:"
            android:textColor="#000" />

        <EditText
            android:id="@+id/studentName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="例:黄平" />
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/linear1"
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="专业班级:"
            android:textColor="#000" />

        <EditText
            android:id="@+id/studentMarjorAndClass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="例:软件1503" />
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/linear2"
        android:id="@+id/linear3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="学号:"
            android:textColor="#000" />

        <EditText
            android:id="@+id/studentID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="例:15110572127" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear4"
        android:layout_below="@id/linear3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:text="请注意！现在没有文件地址！"
            android:id="@+id/myText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ff0"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/myText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#f20"
            android:textSize="17sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear5"
        android:layout_below="@id/linear4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/choose_from_album"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="从相册里打开照片" />

        <ImageView
            android:id="@+id/picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>



        <Button
            android:layout_alignParentBottom="true"
            android:id="@+id/myButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="上传文件" />



</RelativeLayout>
